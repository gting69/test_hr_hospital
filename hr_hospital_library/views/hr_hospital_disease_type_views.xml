<odoo>
    <record
            id="hr_hospital_disease_type_tree"
            model="ir.ui.view">
        <field name="name">hr.hospital.disease.type.tree</field>
        <field name="model">hr.hospital.disease.type</field>
        <field
                name="arch"
                type="xml">
            <tree>
                <field
                        name="name"/>
                <field
                        name="icd_10_code"/>
                <field
                        name="parent_id"/>
                <field
                        name="severity_level"
                        widget="badge"
                        decoration-danger="severity_level == 'critical'"/>
                <field
                        name="is_contagious"/>
            </tree>
        </field>
    </record>

    <record
            id="hr_hospital_disease_type_form"
            model="ir.ui.view">
        <field name="name">hr.hospital.disease.type.form</field>
        <field name="model">hr.hospital.disease.type</field>
        <field
                name="arch"
                type="xml">
            <form>
                <sheet>
                    <div
                            class="oe_title">
                        <label
                                for="name"/>
                        <h1>
                            <field
                                    name="name"
                                    placeholder="Disease Name..."/>
                        </h1>
                    </div>
                    <group>
                        <group
                                string="Classification">
                            <field
                                    name="parent_id"/>
                            <field
                                    name="icd_10_code"/>
                        </group>
                        <group
                                string="Risk Assessment">
                            <field
                                    name="severity_level"/>
                            <field
                                    name="is_contagious"/>
                        </group>
                    </group>
                    <notebook>
                        <page
                                string="Details"
                                name="details">
                            <group>
                                <field
                                        name="country_ids"
                                        widget="many2many_tags"
                                        placeholder="Select countries..."/>
                            </group>
                            <separator
                                    string="Symptoms"/>
                            <field
                                    name="symptoms"
                                    placeholder="Describe symptoms here..."/>
                        </page>
                        <page
                                string="Sub-diseases"
                                name="sub_diseases">
                            <field
                                    name="child_ids">
                                <tree>
                                    <field
                                            name="name"/>
                                    <field
                                            name="icd_10_code"/>
                                    <field
                                            name="severity_level"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record
            id="action_hr_hospital_disease_type_window"
            model="ir.actions.act_window">
        <field name="name">Diseases</field>
        <field name="res_model">hr.hospital.disease.type</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>