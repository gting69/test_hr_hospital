<odoo>
    <record
            id="view_mass_reassign_doctor_wizard_form"
            model="ir.ui.view">
        <field name="name">mass.reassign.doctor.wizard.form</field>
        <field name="model">mass.reassign.doctor.wizard</field>
        <field
                name="arch"
                type="xml">
            <form>
                <group>
                    <field
                            name="old_doctor_id"/>
                    <field
                            name="new_doctor_id"/>
                    <field
                            name="change_date"/>
                </group>
                <group>
                    <field
                            name="patient_ids"
                            widget="many2many_tags"/>
                    <field
                            name="reason"/>
                </group>
                <footer>
                    <button
                            name="action_reassign"
                            string="Reassign"
                            type="object"
                            class="btn-primary"/>
                    <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record
            id="action_mass_reassign_doctor_wizard"
            model="ir.actions.act_window">
        <field name="name">Mass Reassign Doctor</field>
        <field name="res_model">mass.reassign.doctor.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field
                name="binding_model_id"
                ref="hr_hospital_library.model_hr_hospital_library_patient"/>
        <field name="binding_view_types">list</field>
    </record>

    <record
            id="view_disease_report_wizard_form"
            model="ir.ui.view">
        <field name="name">disease.report.wizard.form</field>
        <field name="model">disease.report.wizard</field>
        <field
                name="arch"
                type="xml">
            <form>
                <group>
                    <group
                            string="Period">
                        <field
                                name="start_date"/>
                        <field
                                name="end_date"/>
                    </group>
                    <group
                            string="Configuration">
                        <field
                                name="report_type"/>
                        <field
                                name="group_by"/>
                    </group>
                </group>
                <group>
                    <field
                            name="doctor_ids"
                            widget="many2many_tags"/>
                    <field
                            name="disease_ids"
                            widget="many2many_tags"/>
                    <field
                            name="country_ids"
                            widget="many2many_tags"/>
                </group>
                <footer>
                    <button
                            name="action_generate_report"
                            string="Generate"
                            type="object"
                            class="btn-primary"/>
                    <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record
            id="action_disease_report_wizard"
            model="ir.actions.act_window">
        <field name="name">Disease Analysis Report</field>
        <field name="res_model">disease.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record
            id="view_patient_card_export_wizard_form"
            model="ir.ui.view">
        <field name="name">patient.card.export.wizard.form</field>
        <field name="model">patient.card.export.wizard</field>
        <field
                name="arch"
                type="xml">
            <form>
                <group>
                    <field
                            name="patient_id"/>
                    <field
                            name="export_format"/>
                </group>
                <group
                        string="Options">
                    <field
                            name="include_diagnoses"/>
                    <field
                            name="include_recommendations"/>
                </group>
                <footer>
                    <button
                            name="action_export"
                            string="Export File"
                            type="object"
                            class="btn-primary"/>
                    <button
                            string="Cancel"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record
            id="action_patient_card_export_wizard_binding"
            model="ir.actions.act_window">
        <field name="name">Export Patient Card</field>
        <field name="res_model">patient.card.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field
                name="binding_model_id"
                ref="hr_hospital_library.model_hr_hospital_library_patient"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>